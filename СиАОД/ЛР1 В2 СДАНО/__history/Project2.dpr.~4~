program Project2;

{$APPTYPE CONSOLE}
{$R *.res}

uses
  System.SysUtils;

type
  ptr = ^TElement;

  TElement = record
    next, prev: ptr;
    numberOfPlayer: integer;
  end;

  TList = record
    head, tail: ptr;
  end;

var
  list: TList;
  playersAmount, k, i, counter: integer;
  curr: ptr;
  flag: Boolean;

procedure addNewEl(var curr: ptr);
begin
  if list.head = nil then
  begin
    list.head := curr;
    list.tail := curr;
    curr.next := nil;
    curr.prev := nil;
    exit;
  end;

  curr.next := nil;
  curr.prev := list.tail;
  list.tail.next := curr;
  list.tail := curr;
end;

procedure createList(playersAmount: integer);
var
  curr, tmp: ptr;
  i: integer;

begin
  list.head := nil;
  list.tail := nil;
  new(curr);

  for i := 1 to playersAmount do
  begin
    tmp := curr;
    new(curr);
    curr.numberOfPlayer := i;
    addNewEl(curr);
    tmp.next := curr;
    curr.prev := tmp;
  end;

end;

procedure deletePlayer;
begin

end;

begin
  counter := 1;
  writeln('Введите количество игроков');
  Readln(playersAmount);
  writeln('В счиалочке удаляется каждый k-тый игрок, введите к');
  Readln(k);
  writeln('------------------------------------------------------');
  createList(playersAmount);
  curr := list.head;

  while flag do
  begin
    if (counter = k) then
    begin
      deletePlayer;
    end;
    inc(counter);
    if counter = 5 then
      counter := 1;

  end;

  Readln;

end.
